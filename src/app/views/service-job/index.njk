{% extends 'frame/layout.njk' %}

{% block content %}
  <div class="container">
    <div class="col-xs-12">
      <div class="row">
        <div class="header-details-page">
          <h2>Serviços</h2>
          <a href="/admin/servicos/cadastrar-servico" class="btn btn-primary btn-create-new-item">
            Cadastrar Novo Serviço
          </a>
        </div>
        <table class="table schedule-day">
          <thead>
            <tr>
              <th scope="col">Nome do Serviço</th>
              <th scope="col">Tempo Estimado</th>
              <th scope="col">Valor</th>
              <th scope="col" width="200" class="col-center">Relatório Unitário</th>
              <th scope="col" width="100" class="col-center">Editar</th>
            </tr>
          </thead>
          <tbody>
            {% for service in services %}
              <tr>
              <td>{{ service.name }}</td>
              <td>{{ service.time }}</td>
              <td>{{ service.price }}</td>
              <td class="col-center">
                <button type="button" class="btn btn-secondary btn-edit">
                  <i class="material-icons md-18">list_alt</i>
                </button>
              </td>
              <td class="col-center">
                <a href="/admin/servicos/{{ service.id }}/editar-servico" class="btn btn-info btn-edit">
                  <i class="material-icons md-18">edit</i>
                </a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
